{
  "name": "fcal",
  "productName": "Fcal",
  "version": "0.0.2",
  "description": "Open source calculator",
  "main": "app/app.js",
  "scripts": {
    "build": "tsc -p . && browserify -p tinyify app/renderer.js > app/static/dist.js",
    "gobuild": "go run ./generate/generate.go && go build -o dist/fcal",
    "devbuild": "tsc -p . && browserify --debug app/renderer.js > app/static/dist.js",
    "macos-gobuild": "./bin/build-macos.sh",
    "win-gobuild": "./bin/build-windows.bat",
    "linux-gobuild": "./bin/build-linux.sh",
    "start": "electron app/app.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --linux --windows",
    "dist-linux": "electron-builder --linux",
    "lint": "xo"
  },
  "keywords": [
    "fcal",
    "calculator",
    "typescript",
    "crossplatform",
    "electron-app"
  ],
  "author": {
    "name": "Santhosh Kumar R",
    "email": "santhoshkumarr1096@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "browserify": "^17.0.0",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "tinyify": "^3.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "fcal": "^0.4.2"
  },
  "build": {
    "appId": "com.santhosh.fcal",
    "linux": {
      "icon": "app/build/icons/icon.png",
      "target": [
        "deb",
        "tar.gz",
        "pacman"
      ],
      "category": "Utility"
    },
    "win": {
      "icon": "app/build/icons/icon.ico"
    }
  }
}
